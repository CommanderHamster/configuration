[user]
	name = CommanderHamster
	email = alexhamstra@gmail.com
[credential]
	helper = cache --timeout=3600

[color]
    ui = auto

[alias]
    rev = !sh review.sh
    st = status
    ci = commit
    co = checkout
    di = diff
    b = branch
    fom = fetch origin master
    mm = merge origin/master
    fa = fetch --all
    aa = add --all
    ca = "!git aa; git ci -m"
    l = log --graph --abbrev-commit --date=relative
    lp = !git l --first-parent
    la = !git l --all
    r = !git --no-pager l -20
    ra = !git r --all
    head = !git l -1
    scm-push = !scm-submit
    h = !git head

[format]
    pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[push]
	default = matching
